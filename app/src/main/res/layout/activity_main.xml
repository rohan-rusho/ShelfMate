<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_dashboard"
    tools:context=".MainActivity">

    <!-- App Title -->
    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BookTrack"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- Empty message -->
    <TextView
        android:id="@+id/tvEmptyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No books yet. Go to Settings to add default books or add your own."
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:gravity="center"/>

    <!-- Settings Button -->
    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_settings"
        android:background="@drawable/bg_square_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="0dp"
        android:padding="8dp"
        android:elevation="4dp"
        app:tint="#FD5921" />

    <!-- RecyclerView for book list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBooks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/tvAppTitle"
        android:layout_above="@id/btnAddBook"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

    <!-- Add Book Button -->
    <ImageButton
        android:id="@+id/btnAddBook"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_add_book"
        android:background="@drawable/bg_square_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:elevation="4dp"
        app:tint="#FD5921" />

    <!-- Statistics Button -->
    <ImageButton
        android:id="@+id/btnStatistics"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_statistics"
        android:background="@drawable/bg_square_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:elevation="4dp"
        app:tint="#FD5921" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dashboard"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_marginTop="40dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="90dp"/>

        <!-- Backup Data -->
        <Button
            android:id="@+id/btnBackup"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Backup Reading Data"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

        <!-- Reset Data -->
        <Button
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Reset All Progress"
            android:textColor="#FFFFFF"
            android:backgroundTint="#B80000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

        <!-- Add 5 Default Books -->
        <Button
            android:id="@+id/btnAddDefaultBooks"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Add 5 Default Books"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3"
            android:textSize="16sp"
            android:layout_marginBottom="80dp"
            android:elevation="4dp" />

        <!-- About Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/setting_item_bg"
            android:padding="16dp"
            android:elevation="2dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About this App"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:gravity="center"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Track all your books and reading progress in one place.\nAdd notes, monitor pages read, and organize your reading habits effortlessly.\nBackup your data to keep it safe or reset anytime to start fresh.\nDesigned to make reading tracking simple, organized, and motivating."
                android:textSize="15sp"
                android:textColor="#424242"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
